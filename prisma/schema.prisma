generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RelacaoAtivos {
  codBem        Int      @id
  descricao     String
  modeloProd    String
  fabricaProd   String
  dataAquisicao DateTime
  endereco      String
  local         String
  valorCompra   Float
  valorResidual Float
  grupo         String

  itensConferidos ItemConferencia[]
}

model Conferencia {
  id              Int               @id @default(autoincrement())
  ambiente        String
  usuario         String
  dataConferencia DateTime          @default(now())
  itensConferidos ItemConferencia[]
}

model ItemConferencia {
  id              Int     @id @default(autoincrement())
  codBem          Int
  localVerificado String
  pertence        Boolean
  localReal       String?

  conferenciaId Int
  conferencia   Conferencia   @relation(fields: [conferenciaId], references: [id])
  ativo         RelacaoAtivos @relation(fields: [codBem], references: [codBem])
}
